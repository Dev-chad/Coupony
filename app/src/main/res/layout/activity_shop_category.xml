<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/darker_gray"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageView
            android:contentDescription="food"
            android:id="@+id/view_food"
            android:layout_width="0dp"
            android:background="#ffffff"
            android:layout_margin="5dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/a"/>

        <ImageView
            android:layout_margin="5dp"
            android:contentDescription="coffee"
            android:id="@+id/view_coffee"
            android:layout_width="0dp"
            android:background="#ffffff"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/b" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="1"

        android:orientation="horizontal">

        <ImageView
            android:id="@+id/view_clothes"
            android:layout_width="0dp"
            android:background="#ffffff"
            android:layout_margin="5dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:contentDescription="clothes"
            android:src="@drawable/c" />

        <ImageView
            android:id="@+id/view_eletric"
            android:contentDescription="electric"
            android:layout_width="0dp"
            android:background="#ffffff"
            android:layout_margin="5dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/d" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="1"

        android:orientation="horizontal">

        <ImageView
            android:id="@+id/view_daily"
            android:contentDescription="daily"
            android:layout_width="0dp"
            android:background="#ffffff"
            android:layout_margin="5dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/e" />

        <ImageView
            android:id="@+id/view_hair"
            android:contentDescription="hair"
            android:layout_width="0dp"
            android:background="#ffffff"
            android:layout_margin="5dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/f" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/view_beauty"
            android:contentDescription="beauty"
            android:layout_width="0dp"
            android:background="#ffffff"
            android:layout_margin="5dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/g" />

        <ImageView
            android:id="@+id/view_etc"
            android:contentDescription="etc"
            android:layout_width="0dp"
            android:background="#ffffff"
            android:layout_margin="5dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/h" />

    </LinearLayout>


</LinearLayout>